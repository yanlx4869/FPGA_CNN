<view class="header">
  <button class="login_btn "wx:if="{{!userInfo}}" bindtap="login">微信授权登录</button>
<view wx:else class="root">
  <image class="touxiang"src="{{userInfo.avatarUrl}}"></image>
<text class="nicheng">{{userInfo.nickName}}</text>
<button class="loginout_btn" bindtap="loginOut">退出登录</button>
</view>
</view>

<view wx:if="{{userInfo}}">
<view class="item">
  <button class="buttonstyle" bindtap="jumpPage">功能介绍</button>
<view class="right_arrow"></view>
</view>
<view class="item">
  <button class="buttonstyle" open-type="feedback">反馈建议</button>
<view class="right_arrow"></view>
</view>
<view class="item">
  <button class="buttonstyle" open-type="contact">在线客服</button>
<view class="right_arrow"></view>
</view>
</view>


